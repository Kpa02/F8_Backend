<h1>Danh sách khách hàng</h1>
<form action="">
  <div class = "row">
    <div class = "col-3">
      <select>
        <option value="all">Tat ca trang thai</option>
        <option value="active">Kich hoat</option>
        <option value="inactive">Chua Kich Hoat</option>
      </select>
    </div>
  <div class="col-7">
  <input type="search" class="form-control" placeholder="Tu khoa tim kiem...">
  </div>
  <div class="col-3 d-grid">
  <button type="submit" class = "btn btn-primary">Tim kiem</button>
  </div>
</form>
<table width="100%" border="1" cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th width="5%">STT</th>
      <th>Tên</th>
      <th>Email</th>
      <th width="10%">Trạng thái</th>
    </tr>
  </thead>
  <tbody>
    <% customerList.forEach((customer, index) => { %>
    <tr>
      <td><%= index+1 %></td>
      <td><%= customer.name %></td>
      <td><%= customer.email %></td>
      <td><%= customer.status === 1 ? 'Active': 'Inactive' %></td>
      <td><%= moment(customer.create_at).locale('vi').fromNow()%></td>
    </tr>
    <% }) %>
  </tbody>
</table>
